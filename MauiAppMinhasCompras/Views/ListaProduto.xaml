<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiAppMinhasCompras.Views.ListaProduto"
             Title="Minhas Compras">

    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Somar" Clicked="ToolbarItem_Clicked_1" />
        <ToolbarItem Text="Adicionar" Clicked="ToolbarItem_Clicked" />
    </ContentPage.ToolbarItems>

    <VerticalStackLayout Padding="10">
        <!-- SearchBar para buscar produtos -->
        <SearchBar x:Name="txt_search" 
                   Placeholder="Busca de Produtos"
                   TextChanged="txt_search_TextChanged"
                   Margin="0,0,0,10"/>

        <!-- ListView para exibir produtos -->
        <ListView x:Name="lista_produtos" HasUnevenRows="True">
            <ListView.Header>
                <Grid ColumnDefinitions="*, *, *, *, *" Padding="5">
                    <Label Grid.Column="0" Text="ID" FontAttributes="Bold" HorizontalTextAlignment="Center"/>
                    <Label Grid.Column="1" Text="Descrição" FontAttributes="Bold" HorizontalTextAlignment="Center"/>
                    <Label Grid.Column="2" Text="Preço" FontAttributes="Bold" HorizontalTextAlignment="Center"/>
                    <Label Grid.Column="3" Text="Qnt" FontAttributes="Bold" HorizontalTextAlignment="Center"/>
                    <Label Grid.Column="4" Text="Total" FontAttributes="Bold" HorizontalTextAlignment="Center"/>
                </Grid>
            </ListView.Header>

            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <ViewCell.ContextActions>
                            <MenuItem Text="Remover" Clicked="MenuItem_Clicked" CommandParameter="{Binding .}"/>
                        </ViewCell.ContextActions>

                        <Grid ColumnDefinitions="*, *, *, *, *" Padding="5">
                            <Label Grid.Column="0" Text="{Binding Id}" HorizontalTextAlignment="Center"/>
                            <Label Grid.Column="1" Text="{Binding Descricao}" />
                            <Label Grid.Column="2" Text="{Binding Preco, StringFormat='R${0:F2}'}" HorizontalTextAlignment="End"/>
                            <Label Grid.Column="3" Text="{Binding Quantidade}" HorizontalTextAlignment="Center"/>
                            <Label Grid.Column="4" Text="{Binding Total, StringFormat='R${0:F2}'}" HorizontalTextAlignment="End"/>
                        </Grid>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </VerticalStackLayout>
</ContentPage>
